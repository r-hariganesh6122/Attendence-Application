datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Program {
  id          Int          @id @default(autoincrement())
  name        String       @unique
  departments Department[]
}

model Department {
  id        Int      @id @default(autoincrement())
  name      String
  programId Int
  program   Program   @relation(fields: [programId], references: [id])
  classes   Class[]
  @@unique([name, programId])
}

model Class {
  id           Int         @id @default(autoincrement())
  name         String
  departmentId Int

  department   Department @relation(fields: [departmentId], references: [id])
  attendance   Attendance[]
  students     Student[]
  classTeachers ClassTeacher[]

  @@unique([name, departmentId])
}


model User {
  id        Int     @id @default(autoincrement())
  name      String
  email     String  @unique
  mobile    String  @unique
  password  String
  role      String  // 'admin', 'teacher', 'student'
  classTeachers ClassTeacher[]
}
// Join table for teachers assigned to classes with subjects
model ClassTeacher {
  id        Int    @id @default(autoincrement())
  classId   Int
  teacherId Int
  subject   String

  class     Class  @relation(fields: [classId], references: [id])
  teacher   User   @relation(fields: [teacherId], references: [id])

  @@unique([classId, teacherId, subject])
}

model Attendance {
  id            Int      @id @default(autoincrement())
  date          DateTime
  studentId     Int
  classId       Int
  status        String
  absenceReason String?
  informed      Boolean?

  student Student @relation(fields: [studentId], references: [id])
  class   Class   @relation(fields: [classId], references: [id])

  @@unique([studentId, date])
}
// Enum for student residence type
enum ResidenceType {
  H   // Hosteller
  D   // Day Scholar
  OSS // Outside Stayer
}

model Student {
  id           Int           @id @default(autoincrement())
  rollNo       String
  regNo        String
  studentName  String
  residence    ResidenceType
  classId      Int
  class        Class         @relation(fields: [classId], references: [id])
  attendance   Attendance[]
}
